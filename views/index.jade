extends layout

block content

    div#head
        //p Header
        h1= title
        if user
            div#user
                p Hallo #{user.username}
                a(href='/logout') Logout
        else
            div#login
                a(href='/login') Login

        if errMessage
            div.errMessage
                p.errMessage= errMessage

    div#main
        //p Main
        div#left.floatLeft
            div.padding
                div#mainMenu
                    h3 Main Menu
                    ul
                        li Nutzer erstellen
                        li Nutzergruppe erstellen
                        li Nutzer zu Gruppen zuordnen

        div#middle.floatLeft
            div.padding
                div#groupData
                    if groupData
                        if groupData.users
                            h2 Neueste Benutzer
                            div#users.groupDataTable
                                ul
                                    each user in groupData.users
                                        li= user.username

                        if groupData.userGroups
                            h2 Neueste Nutzergruppen
                            div#userGroups.groupDataTable
                                ul
                                    each group in groupData.userGroups
                                        li= group.name

        div#right.floatLeft
            div.padding
                div#contextMenu
                    h3 Context Menu

    div#bottom
        //p Bottom